FROM python:3.11-slim

WORKDIR /app

# Copy requirements
COPY ../requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend code
COPY . .

# Expose port
EXPOSE 8000

# Run the application
CMD ["uvicorn", "test_api:app", "--host", "0.0.0.0", "--port", "8000"]
